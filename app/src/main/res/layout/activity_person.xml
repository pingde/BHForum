<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        style="@style/toolbar_widget">

        <RelativeLayout
            android:id="@+id/img_back"
            android:layout_width="110px"
            android:layout_height="match_parent"
            android:background="@drawable/selector_b_pressed">

            <ImageButton
                android:id="@+id/img_arrow"
                style="@style/image_back" />
        </RelativeLayout>

        <TextView
            style="@style/toolbar_title"
            android:text="个人资料" />

        <TextView
            android:id="@+id/tv_user_flush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/border_larger"
            android:text="上传修改"
            android:textColor="@color/toolbar_text_color"
            android:textSize="@dimen/text_normal_size" />
    </RelativeLayout>


    <com.baiheplayer.bbs.ui.SubPullToRefresh
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border_larger"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rl_user_avatar"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_normal"
                    android:layout_centerVertical="true"
                    android:text="头像" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/img_user_avatar"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10px"
                    android:clickable="true"
                    android:background="@drawable/pic_mine_head" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:src="@mipmap/pic_line_horizontal_long" />

            <LinearLayout
                android:id="@+id/rl_user_name"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:clickable="true"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_normal"
                    android:text="昵称" />

                <Space
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_user_name"
                    style="@style/text_normal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px" />

                <ImageView style="@style/dec_arrow2" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:src="@mipmap/pic_line_horizontal_long" />

            <LinearLayout
                android:id="@+id/rl_user_signature"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:clickable="true"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_normal"
                    android:singleLine="true"
                    android:text="签名" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_user_signature"
                    style="@style/text_normal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px" />

                <ImageView style="@style/dec_arrow2" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:src="@mipmap/pic_line_horizontal_long" />

            <LinearLayout
                android:id="@+id/rl_user_phone"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:clickable="true"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_normal"
                    android:text="手机" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_user_phone"
                    style="@style/text_normal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px" />

                <ImageView style="@style/dec_arrow2" />


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:src="@mipmap/pic_line_horizontal_long" />

            <LinearLayout
                android:id="@+id/rl_user_email"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:clickable="true"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_normal"
                    android:text="邮箱" />
                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_user_email"
                    style="@style/text_normal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px" />

                <ImageView style="@style/dec_arrow2" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:src="@mipmap/pic_line_horizontal_long" />

            <LinearLayout
                android:id="@+id/rl_user_address"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:clickable="true"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:gravity="center_vertical">

                <TextView
                    style="@style/text_normal"
                    android:text="地址" />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_user_address"
                    style="@style/text_normal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px" />

                <ImageView style="@style/dec_arrow2" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_marginRight="@dimen/border_larger"
                android:src="@mipmap/pic_line_horizontal_long" />

            <Button
                android:id="@+id/btn_user_exit"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="@dimen/length_60"
                android:layout_marginRight="@dimen/length_60"
                android:layout_marginTop="@dimen/length_60"
                android:background="@drawable/ripple_button_long"
                android:text="退出登录"
                android:textColor="@color/text_write"
                android:textSize="@dimen/text_normal_size" />
        </LinearLayout>
    </com.baiheplayer.bbs.ui.SubPullToRefresh>
</LinearLayout>