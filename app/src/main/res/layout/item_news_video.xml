<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="368px"
        android:layout_marginLeft="23px"
        android:layout_marginRight="23px"
        android:layout_marginTop="11px"
        app:cardCornerRadius="0px"
        app:cardElevation="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--标题-->
            <LinearLayout
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="33px"
                    android:layout_height="33px"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iv_news_con"
                        android:layout_width="11px"
                        android:layout_height="11px"
                        android:src="@drawable/pic_news_mark"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_news_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="24px"
                    android:textColor="@color/content_text_color"
                    android:text="@string/temp_abstract"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="11px"
                android:layout_marginRight="11px"
                android:src="@color/content_text_color"/>
            <!--图文-->
            <LinearLayout
                android:layout_marginTop="20px"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <VideoView
                        android:id="@+id/vv_news_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="100px"
                            android:layout_height="100px"
                            android:scaleType="fitCenter"
                            android:src="@drawable/pic_news_video"/>
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>

            <!--附加信息-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20px"
                android:layout_marginBottom="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="10px"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:src="@drawable/pic_news_time"/>
                <TextView
                    android:id="@+id/tv_news_time"
                    android:layout_marginLeft="5px"
                    android:layout_width="wrap_content"
                    android:layout_height="24px"
                    android:textColor="@color/content_text_color"
                    android:textSize="24px"
                    android:text="@string/news_time"
                    />
                <ImageView
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:layout_marginLeft="30px"
                    android:src="@drawable/pic_news_seen"/>
                <TextView
                    android:layout_marginLeft="5px"
                    android:id="@+id/tv_news_seen"
                    android:layout_width="wrap_content"
                    android:layout_height="24px"
                    android:textColor="@color/content_text_color"
                    android:textSize="24px"
                    android:text="@string/news_time"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>