<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/border_small"
        app:cardElevation="@dimen/border_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_larger"
                android:layout_marginBottom="@dimen/border_normal"
                android:textColor="@color/content_text_color"
                android:textSize="@dimen/text_larger_size"
                android:text="请选择您的区域"/>
            <include layout="@layout/widget_horizontal_deep_line"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100px">
                <android.support.v7.widget.CardView
                    app:cardElevation="5px"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/border_small"
                    android:layout_marginBottom="@dimen/border_small"
                    android:layout_marginLeft="@dimen/border_small"
                    android:layout_height="match_parent">
                    <Spinner
                        android:id="@+id/choose_province"
                        android:spinnerMode="dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Spinner>
                </android.support.v7.widget.CardView>
                <ImageView
                    android:layout_width="@dimen/border_small"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.CardView
                    app:cardElevation="5px"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/border_small"
                    android:layout_marginBottom="@dimen/border_small">
                    <Spinner
                        android:id="@+id/choose_city"
                        android:spinnerMode="dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Spinner>
                </android.support.v7.widget.CardView>
                <ImageView
                    android:layout_width="@dimen/border_small"
                    android:layout_height="match_parent" />
                <android.support.v7.widget.CardView
                    app:cardElevation="5px"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/border_small"
                    android:layout_marginTop="@dimen/border_small"
                    android:layout_marginBottom="@dimen/border_small">
                    <Spinner
                        android:id="@+id/choose_Area"
                        android:spinnerMode="dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </Spinner>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/border_normal"
                android:layout_marginBottom="@dimen/border_larger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.baiheplayer.bbs.ui.DefButton
                    android:id="@+id/cancel"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/border_larger"
                    android:layout_marginRight="@dimen/border_normal"
                    android:background="@drawable/selector_a_pressed"
                    android:textColor="@color/content_text_color"
                    android:textSize="35px"
                    android:text="@string/text_cancel"/>

                <com.baiheplayer.bbs.ui.DefButton
                    android:id="@+id/ensure"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/border_normal"
                    android:layout_marginRight="@dimen/border_larger"
                    android:background="@drawable/selector_a_pressed"
                    android:textColor="@color/content_text_color"
                    android:textSize="35px"
                    android:text="确定" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>