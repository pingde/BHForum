<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/toolbar_widget">

        <RelativeLayout
            android:id="@+id/tv_comment_cancel"
            android:background="@drawable/selector_b_pressed"
            android:layout_width="@dimen/toolbar_height"
            android:layout_height="@dimen/toolbar_height">
            <TextView
                style="@style/toolbar_cancel"
                android:text="@string/text_cancel" />
        </RelativeLayout>
        <TextView
            style="@style/toolbar_title"
            android:text="@string/text_write_cmt" />

        <TextView
            android:id="@+id/img_comment_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/border_larger"
            android:text="确定"
            android:textColor="@color/toolbar_text_color"
            android:textSize="@dimen/text_normal_size"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_comment"
            android:layout_width="match_parent"
            android:layout_height="320px"
            android:layout_marginBottom="@dimen/border_normal"
            android:layout_marginLeft="@dimen/border_normal"
            android:layout_marginRight="@dimen/border_normal"
            android:layout_marginTop="@dimen/border_normal"
            app:cardElevation="@dimen/border_small">

            <EditText
                android:id="@+id/et_input"
                style="@style/edit_normal"
                android:textColor="@color/content_text_color" />
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</LinearLayout>