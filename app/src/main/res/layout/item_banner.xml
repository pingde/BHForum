<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_banner"
        android:layout_width="match_parent"
        android:layout_height="420px">
        <!--叠层白-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="368px"
            android:layout_marginLeft="@dimen/border_normal"
            android:layout_marginRight="@dimen/border_normal"
            android:layout_marginTop="@dimen/border_normal"
            app:cardCornerRadius="0px"
            android:background="@color/background_color"
            app:cardElevation="@dimen/border_small" />
        <!--轮播图-->
        <android.support.v4.view.ViewPager
            android:id="@+id/vp_banner_pic"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:background="@mipmap/loading"
            android:layout_marginLeft="@dimen/border_larger"
            android:layout_marginRight="@dimen/border_larger"
            android:elevation="@dimen/border_normal">

        </android.support.v4.view.ViewPager>
        <!--指示器-->
        <RadioGroup
            android:id="@+id/rg_pointer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="20px"
            android:elevation="@dimen/border_normal">
            <RadioButton
                android:id="@+id/rb_head_pointer1"
                android:layout_width="15px"
                android:layout_height="15px"
                android:layout_marginRight="18px"
                android:background="@drawable/selector_point"
                android:button="@null" />
        </RadioGroup>

    </RelativeLayout>
</LinearLayout>