<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--内容提示控件-->
    <TextView
        android:id="@+id/tv_content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/border_normal"
        android:text="论坛"
        android:textColor="@color/content_text_color"
        android:textSize="@dimen/text_normal_size" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/border_normal"
        android:layout_marginTop="@dimen/border_larger"
        android:layout_toLeftOf="@+id/tv_content_label"
        android:src="@drawable/pic_news_left" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_normal"
        android:layout_marginTop="@dimen/border_larger"
        android:layout_toRightOf="@+id/tv_content_label"
        android:src="@drawable/pic_news_right" />
</RelativeLayout>