<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="@dimen/border_normal"
        android:layout_marginLeft="@dimen/border_normal"
        android:layout_marginRight="@dimen/border_normal"
        android:layout_marginBottom="@dimen/border_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_report_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/pic_forum_report"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/text_normal_size"
            android:text="举报"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/border_larger"
        android:layout_marginRight="@dimen/border_larger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_report_lie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/text_small_size"
            android:text="虚假信息"/>
        <CheckBox
            android:id="@+id/cb_report_junk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/text_small_size"
            android:text="垃圾营销"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/border_larger"
        android:layout_marginRight="@dimen/border_larger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_report_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/text_small_size"
            android:text="情色信息"/>
        <CheckBox
            android:id="@+id/cb_report_attack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/text_small_size"
            android:text="人身攻击"/>
    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/border_larger"
        android:layout_marginRight="@dimen/border_larger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_report_reform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/text_small_size"
            android:text="反动言论"/>
        <CheckBox
            android:id="@+id/cb_report_copy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/content_text_color"
            android:textSize="@dimen/text_small_size"
            android:text="涉嫌抄袭"/>
    </RelativeLayout>

</LinearLayout>