<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        style="@style/toolbar_widget">
        <RelativeLayout
            android:id="@+id/img_back"
            android:layout_width="110px"
            android:layout_height="match_parent"
            android:clickable="true">
            <TextView
                style="@style/toolbar_cancel"
                android:text="@string/text_cancel" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_edit_title"
            style="@style/toolbar_title"
            android:text="@string/text_edit" />

        <TextView
            android:id="@+id/img_edit_ensure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/border_larger"
            android:text="确定"
            android:textSize="@dimen/text_normal_size"
            android:textColor="@color/toolbar_text_color"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="320px"
            android:layout_marginBottom="@dimen/border_normal"
            android:layout_marginLeft="@dimen/border_normal"
            android:layout_marginRight="@dimen/border_normal"
            android:layout_marginTop="@dimen/border_normal"
            app:cardElevation="10px">

            <EditText
                android:id="@+id/et_input"
                style="@style/edit_normal"
                android:layout_marginLeft="@dimen/border_normal"
                android:layout_marginTop="@dimen/border_normal"
                android:layout_marginRight="@dimen/border_normal"
                android:layout_marginBottom="@dimen/border_normal"
                android:textColor="@color/content_text_color" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</LinearLayout>