<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="@dimen/border_larger"
            android:layout_marginLeft="@dimen/border_normal"
            android:layout_marginRight="@dimen/border_normal"
            android:layout_marginBottom="@dimen/border_small"
            app:cardCornerRadius="1px"
            app:cardElevation="5px">

            <EditText
                android:id="@+id/et_ads_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:hint="姓名"
                android:background="@null"
                android:layout_marginLeft="@dimen/border_normal"
                android:textColorHint="@color/text_hint" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="@dimen/border_small"
            android:layout_marginLeft="@dimen/border_normal"
            android:layout_marginRight="@dimen/border_normal"
            app:cardCornerRadius="1px"
            app:cardElevation="5px">

            <EditText
                android:id="@+id/et_ads_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="电话"
                android:layout_marginLeft="20px"
                android:textColorHint="@color/color2" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="@dimen/border_small"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/border_small"
                android:layout_marginBottom="@dimen/border_small"
                android:layout_marginLeft="@dimen/border_normal"
                app:cardCornerRadius="1px"
                app:cardElevation="5px">
                <Spinner
                    android:id="@+id/sp_province"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>
            </android.support.v7.widget.CardView>

            <ImageView
                android:layout_width="10px"
                android:layout_height="match_parent" />

            <android.support.v7.widget.CardView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/border_small"
                android:layout_marginBottom="@dimen/border_small"
                app:cardCornerRadius="1px"
                app:cardElevation="5px">
                <Spinner
                    android:id="@+id/sp_city"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>
            </android.support.v7.widget.CardView>
            <ImageView
                android:layout_width="10px"
                android:layout_height="match_parent" />

            <android.support.v7.widget.CardView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/border_small"
                android:layout_marginBottom="@dimen/border_small"
                android:layout_marginRight="@dimen/border_normal"
                app:cardCornerRadius="1px"
                app:cardElevation="5px">
                <Spinner
                    android:id="@+id/sp_area"
                    android:spinnerMode="dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></Spinner>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="@dimen/border_small"
            android:layout_marginLeft="@dimen/border_normal"
            android:layout_marginRight="@dimen/border_normal"
            android:layout_marginBottom="@dimen/border_small"
            app:cardCornerRadius="1px"
            app:cardElevation="5px">

            <EditText
                android:id="@+id/et_ads_Street"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="详细地址"
                android:layout_marginLeft="20px"
                android:textColorHint="@color/color2" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="@dimen/border_small"
            android:layout_marginLeft="@dimen/border_normal"
            android:layout_marginRight="@dimen/border_normal"
            android:layout_marginBottom="@dimen/border_small"
            app:cardCornerRadius="1px"
            app:cardElevation="5px">

            <EditText
                android:id="@+id/et_ads_zipcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:hint="邮编"
                android:layout_marginLeft="20px"
                android:textColorHint="@color/color2" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="@dimen/border_small"
            android:layout_marginLeft="@dimen/border_normal"
            android:layout_marginRight="@dimen/border_normal"
            android:layout_marginBottom="@dimen/border_normal"
            app:cardCornerRadius="1px"
            app:cardElevation="5px">

            <EditText
                android:id="@+id/et_ads_ps"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@null"
                android:layout_marginLeft="20px"
                android:hint="地址标签（如“家”，“公司”）"
                android:textColorHint="@color/color2" />
        </android.support.v7.widget.CardView>
        <include layout="@layout/widget_horizontal_line"/>
    </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_marginTop="20px"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1px"-->
        <!--android:background="@color/content_text_color" />-->

    <LinearLayout
        android:layout_marginTop="@dimen/border_normal"
        android:layout_marginBottom="@dimen/border_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.baiheplayer.bbs.ui.DefButton
            android:id="@+id/btn_ads_cancel"
            android:layout_width="0px"
            android:layout_height="100px"
            android:layout_marginLeft="@dimen/border_normal"
            android:layout_marginRight="@dimen/border_small"
            android:layout_weight="1"
            android:background="@drawable/selector_a_pressed"
            android:textSize="@dimen/text_larger_size"
            android:text="取消" />

        <com.baiheplayer.bbs.ui.DefButton
            android:id="@+id/btn_ads_ensure"
            android:layout_width="0px"
            android:layout_height="100px"
            android:layout_marginLeft="@dimen/border_small"
            android:layout_marginRight="@dimen/border_normal"
            android:layout_weight="1"
            android:background="@drawable/selector_a_pressed"
            android:textSize="@dimen/text_larger_size"
            android:text="保存" />
    </LinearLayout>
</LinearLayout>