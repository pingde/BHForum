<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/border_small"
        android:layout_marginLeft="@dimen/border_normal"
        android:layout_marginRight="@dimen/border_normal"
        android:layout_marginBottom="@dimen/border_small"
        app:cardElevation="@dimen/border_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginLeft="@dimen/border_normal"
            android:layout_marginTop="@dimen/border_small"
            android:layout_marginBottom="@dimen/border_small"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_larger"
                android:textColor="@color/content_text_color"
                android:textSize="35px"
                android:text="百翮信息"/>
            <TextView
                android:id="@+id/tv_book_phone"
                android:layout_below="@+id/tv_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_small"
                android:textColor="@color/content_text_color"
                android:textSize="@dimen/text_larger_size"
                android:text="15382022022"/>
            <TextView
                android:id="@+id/tv_book_zipcode"
                android:layout_toRightOf="@+id/tv_book_phone"
                android:layout_alignBaseline="@+id/tv_book_phone"
                android:layout_marginLeft="@dimen/border_larger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/content_text_color"
                android:textSize="@dimen/text_larger_size"/>
            <!--省-->
            <TextView
                android:id="@+id/tv_book_province"
                android:layout_below="@+id/tv_book_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_small"
                android:textColor="@color/content_text_color"
                android:textSize="@dimen/text_larger_size"
                android:text="上海"/>
            <!--市-->
            <TextView
                android:id="@+id/tv_book_city"
                android:layout_toRightOf="@+id/tv_book_province"
                android:layout_alignBaseline="@+id/tv_book_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_normal"
                android:textColor="@color/content_text_color"
                android:textSize="@dimen/text_larger_size"
                android:text="上海市"/>
            <!--区-->
            <TextView
                android:id="@+id/tv_book_area"
                android:layout_toRightOf="@+id/tv_book_city"
                android:layout_alignBaseline="@+id/tv_book_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_normal"
                android:textColor="@color/content_text_color"
                android:textSize="@dimen/text_larger_size"
                android:text="闵行区"/>
            <!--街道-->
            <TextView
                android:id="@+id/tv_book_street"
                android:layout_toRightOf="@+id/tv_book_area"
                android:layout_alignBaseline="@+id/tv_book_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_normal"
                android:textColor="@color/content_text_color"
                android:textSize="@dimen/text_larger_size"
                android:text="友东路358号"/>
            <TextView
                android:id="@+id/tv_book_ps"
                android:layout_toRightOf="@+id/tv_book_street"
                android:layout_alignBaseline="@+id/tv_book_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_normal"
                android:textColor="@color/content_text_color"
                android:textSize="@dimen/text_larger_size"
                android:text="家"/>
            <com.baiheplayer.bbs.ui.DefButton
                android:id="@+id/btn_location_edit"
                android:layout_marginRight="@dimen/border_normal"
                android:layout_marginTop="@dimen/border_normal"
                android:layout_alignParentRight="true"
                android:layout_width="160px"
                android:layout_height="90px"
                android:background="@drawable/selector_a_pressed"
                android:textColor="@color/content_text_color"
                android:textSize="35px"
                android:text="编辑"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>