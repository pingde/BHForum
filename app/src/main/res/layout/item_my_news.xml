<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16px"
        android:layout_marginRight="16px"
        android:layout_marginTop="8px"
        android:layout_marginBottom="8px"
        app:cardCornerRadius="3px"
        app:cardElevation="5px">

        <RelativeLayout
            android:id="@+id/rl_detail"
            android:background="@drawable/selector_a_pressed"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/tl_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="85px"
                    android:layout_height="85px"
                    android:layout_marginLeft="15px"
                    android:layout_marginTop="20px" />

                <TextView
                    android:id="@+id/tv_nike_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120px"
                    android:layout_marginTop="40px"
                    android:text="百翮论坛"
                    android:textColor="@color/content_text_color"
                    android:textSize="30px" />



                <LinearLayout
                    android:id="@+id/ll_my_news_response"
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="30px"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/cb_click_response"
                        android:layout_width="30px"
                        android:layout_height="30px"
                        android:layout_marginRight="@dimen/border_small"
                        android:background="@drawable/pic_item_comment"
                        android:clickable="true" />

                    <TextView
                    android:id="@+id/tv_count_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/border_normal"
                    android:text="回复"
                    android:textColor="@color/content_text_color"
                    android:textSize="25px" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_my_news_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10px"
                    android:layout_marginLeft="120px"
                    android:layout_marginTop="100px"
                    android:text="评论我就随便说点什么"
                    android:textColor="@color/content_text_deep_color"
                    android:textSize="28px" />
                <LinearLayout
                    android:id="@+id/ll_my_comment"
                    android:layout_below="@+id/tv_my_news_content"
                    android:layout_marginLeft="120px"
                    android:layout_marginRight="@dimen/border_normal"
                    android:background="@color/background_color"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_my_news_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/shallow_blue"
                        android:textSize="@dimen/text_normal_size"
                        android:text=""/>
                    <TextView
                        android:id="@+id/tv_my_news_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/content_text_color"
                        android:textSize="@dimen/text_normal_size"
                        android:text=""/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_create_time"
                    android:layout_below="@+id/ll_my_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120px"
                    android:layout_marginTop="@dimen/border_normal"
                    android:layout_marginBottom="@dimen/border_normal"
                    android:text="2016.12.01 16.00"
                    android:textColor="@color/content_text_color"
                    android:textSize="@dimen/text_small_size" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tl_comment"
                android:orientation="vertical"></LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>